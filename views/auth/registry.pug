extends ../layout/index

block contents
    div.py-10
        h1.text-center.text-4xl.my-10.font-extrabold Reci
            span.font-normal clando
        h2.text-center.text-2xl.font-extrabold= page
                
        div.mt-8.mx-auto.max-w-md
            div.bg-white.py-8.px-4.shadow
                form(method="POST" action="/auth/registrar" noValidate)
                    div.space-y-5
                        label(for="name" class="block text-sm uppercase text-gray-500 mb-2 font-bold" ) Nombre 
                        input(placeholder="Como te llamas?" type="text" name="name" 
                        class="w-full px-3 py-2 border.border-gray-300 rounded-md placeholder-gray-400")
                        
                        label(for="email" class="block text-sm uppercase text-gray-500 mb-2 font-bold") Email
                        input(placeholder="ejemplo@email.cl" type="email" name="email" 
                        class="w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400")

                        label(for="password" class="block text-sm uppercase text-gray-500 mb-2 font-bold") Password
                        input(placeholder="Ingresa una contrase침a" type="password"  name="password" 
                        class="w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400")

                        label(for="password_confirm" class="block text-sm uppercase text-gray-500 mb-2 font-bold" ) Confirmar Password
                        input(placeholder="Confirma la contrase침a" type="password"  name="password_confirm"
                        class="w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400")

                    div.flex.item-center.justify-between.mt-4
                        a(href="/auth/login" class="text-gray-500 text-xs") Ya tienes cuenta? Inicia sesi칩n
                        a(href="/auth/restablecer-password" class="text-gray-500 text-xs") Olvide la contrase침a

                    
                    if errors 
                        div(class="max-w-md mx-auto my-10")
                            each error in errors
                                p.bg-blue-400.text-white.text-xs.text-center.p-2.mb-1.font-bold= error.msg

                    input(type="submit" value="Crear Cuenta" 
                    class="w-full mt-10 bg-green-300 hover:bg-green-500 rounded-md text-center font-extrabold text-gray-500 text-2xl py-3 cursor-pointer" )
