extends ../layout/index

block contents  
    div.py-10
        h1.text-center.text-4xl.my-10.font-extrabold Reci
            span.font-normal clando
        h2.text-center.text-2xl.font-extrabold= page

        div.mt-8.mx-auto.max-w-md
            div.bg-white.py-8.px-4.shadow
                form(method="POST" noValidate)
                    input(type="hidden" name="_csrf" value= csrfToken)

                    div.space-y-5
                        label(for="email" class="block text-sm uppercase text-gray-500 mb-2 font-bold") Nuevo Password
                        input(placeholder="Ingresa un nuevo password" type="password" name="password" id="password"
                        class="w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400")

                        label(for="email" class="block text-sm uppercase text-gray-500 mb-2 font-bold") Confirmar Password
                        input(placeholder="Confirma el Password" type="password" name="confirm-password" id="confirm-password"
                        class="w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400")
                    
                    if errors 
                        div(class="max-w-md mx-auto my-10")
                            each error in errors
                                p.bg-blue-400.text-white.text-xs.text-center.p-2.mb-1.font-bold= error.msg


                    input(type="submit" value="Guardar" 
                    class="w-full mt-10 bg-green-300 hover:bg-green-500 rounded-md text-center font-extrabold text-gray-500 text-2xl py-3 cursor-pointer" )